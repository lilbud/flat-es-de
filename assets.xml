<theme>
    <include>./assets/colors/${system.theme}.xml</include>
    
    <colorScheme name="dark">
        <variables>
            <backgroundColor>202020</backgroundColor>
            <boxesColor>303030</boxesColor>
            <sidebarColor>303030</sidebarColor>
            <footerColor>303030</footerColor>
        </variables>

    </colorScheme>

    <colorScheme name="light">
        <variables>
            <backgroundColor>c9c9c9</backgroundColor>
            <boxesColor>ffffff</boxesColor>
            <sidebarColor>2d2f3b</sidebarColor>
            <footerColor>262533</footerColor>
        </variables>
    </colorScheme>

    <colorScheme name="light, dark">
        <variables>
            <systemColor>${systemColor}</systemColor>
            <gamelistHelpColor>FFFFFF</gamelistHelpColor>
            <textColor>c9c9c9</textColor>
            <gamelistSelectedColor>FFFFFF</gamelistSelectedColor>
            <gamelistColor>818181</gamelistColor>
        </variables>
    </colorScheme>
    
</theme>