<theme>
	<include>./../assets.xml</include>

	<variables>
		<box>./../assets/box.png</box>
		<mainFont>./../assets/OPENSANS.TTF</mainFont>
        <lightFont>./../assets/LIGHT.TTF</lightFont>
        <gamelistLogo>./../assets/gamelist_logos/${system.theme}.svg</gamelistLogo>
        <systemLogo>./../assets/system_logos/${system.theme}.svg</systemLogo>
	</variables>
	
	<view name="gamelist">	
		<image name="sidebar">
			<pos>0 0.116</pos>
			<size>0.173 1</size>
			<path>${box}</path>
			<color>${sidebarColor}</color>
			<zIndex>1</zIndex>
		</image>

		<image name="gameList_box">
			<pos>0.466 0.178</pos>
			<size>0.468 0.693</size>
			<path>${box}</path>
			<color>${boxesColor}</color>
			<zIndex>1</zIndex>
		</image>

		<text name="description">
			<metadata>description</metadata>
			<fontSize>0.025</fontSize>
			<fontPath>${mainFont}</fontPath>
			<size>0.185 0.32</size>
			<pos>0.256 0.53</pos>
			<color>818181</color>
			<zIndex>2</zIndex>
		</text>

		<image name="gameInfo_box">
			<pos>0.240 0.178</pos>
			<size>0.213 0.693</size>
			<path>${box}</path>
			<color>${boxesColor}</color>
			<zIndex>1</zIndex>
		</image>

		<textlist name="gamelist">
			<pos>0.487 0.212</pos>
			<size>0.423 0.63</size>
		</textlist>

		<image name="md_image">
			<imageType>image</imageType>
			<pos>0.254 0.202</pos>
			<maxSize>0.185 0.327</maxSize>
			<origin>0 0</origin>
			<zIndex>2</zIndex>
			<!-- <default>${box}</default> -->
			<interpolation>linear</interpolation>
		</image>

		<text name="md_lbl_rating, md_lbl_genre, md_lbl_players, md_lbl_developer, md_lbl_releasedate, md_lbl_playcount, md_players, md_genre, md_developer, md_releasedate, md_playcount">
			<fontPath>${mainFont}</fontPath>
			<color>${textColor}</color>
			<container>true</container>
			<containerVerticalSnap>true</containerVerticalSnap>
			<size>0.139 0.03</size>
			<fontSize>0.03</fontSize>
		</text>

		<text name="md_lbl_rating">
			<pos>0.014 0.160</pos>
			<text>Rating:</text>
		</text>

		<rating name="md_rating">
			<pos>0.014 0.200</pos>
			<size>0.035 0.035</size>
			<filledPath>./../assets/star_filled_spacing.svg</filledPath>
			<unfilledPath>./../assets/star_hollow_3_spacing.svg</unfilledPath>
		</rating>
		
		<text name="md_lbl_players">
			<pos>0.014 0.270</pos>
			<text>Players:</text>
		</text>

		<text name="md_players">
			<pos>0.014 0.310</pos>
			<metadata>players</metadata>
		</text>

		<text name="md_lbl_genre">
			<pos>0.014 0.380</pos>
			<text>Genre:</text>
		</text>
		
		<text name="md_genre">
			<pos>0.014 0.420</pos>
			<metadata>genre</metadata>
		</text>
		
		<text name="md_lbl_developer">
			<pos>0.014 0.490</pos>
			<text>Developer:</text>
		</text>

		<text name="md_developer">
			<pos>0.014 0.530</pos>
			<metadata>developer</metadata>
		</text>
		
		<text name="md_lbl_releasedate">
			<pos>0.014 0.600</pos>
			<text>Released:</text>
		</text>
		
		<datetime name="md_releasedate">
			<pos>0.014 0.640</pos>
			<metadata>releasedate</metadata>
			<fontPath>${mainFont}</fontPath>
			<color>${textColor}</color>
			<fontSize>0.03</fontSize>
		</datetime>
		
		<text name="md_lbl_playcount">
			<pos>0.014 0.710</pos>
			<text>Times Played:</text>
		</text>
		
		<text name="md_playcount">
			<pos>0.014 0.750</pos>
			<metadata>playcount</metadata>
		</text>
	</view>
</theme>